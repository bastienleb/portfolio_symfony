<style>
    .myNav{
        background-color: transparent;
        backdrop-filter: blur(6px);
    }

    #dropdown1{
        background-color: #16161a;
    }

    .brand-logo{
        padding: 10px;
    }

    .sidenav{
        background-color: transparent;
        backdrop-filter: blur(5px);
        width: 100%;
    }

    .sidenav li a,#dropdown1 li a, .myNav a, .myNav li a{
        text-shadow: 1px 0 #010101, -1px 0 #010101, 0 1px #010101, 0 -1px #010101,
        1px 1px #010101, -1px -1px #010101, 1px -1px #010101, -1px 1px #010101;
        color: #94a1b2 ;
    }

    @media screen and (max-width: 1024px){
        .myNav a{
            font-size: 1.5rem;
        }

        .brand-logo{
            pointer-events: none;
            cursor: default;
        }
    }
</style>

<script>
    //dropdown
    $(".dropdown-trigger").dropdown();

    //mobile menu
    $(document).ready(function(){
        $('.sidenav').sidenav();
    });


    var path = location.pathname;
    var directories = path.split("/");
    var lastDirecotry = directories[(directories.length - 1)];

    if (window.matchMedia("(max-width: 767px)").matches)
    {
        if(directories[(directories.length - 2)] === 'realisation'
            || lastDirecotry === 'cv' || lastDirecotry === 'contact') {
            $('.brand-logo').text(capitalizeFirstLetter(lastDirecotry));
        }
        else if(lastDirecotry === 'Home'){
            $('.brand-logo').text(" ");
        }
    }

    function capitalizeFirstLetter(string) {
        return string.charAt(0).toUpperCase() + string.slice(1);
    }



</script>
